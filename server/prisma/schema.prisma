generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    String   @id @unique
  email      String   @unique
  password   String
  first_name String
  last_name  String
  role       Role
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Admin      Admin?
  Alumni     Alumni?
  Student    Student?
}

model Admin {
  user_id     String  @id @unique
  permissions String?
  User        User    @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}

model Student {
  user_id    String  @id @unique
  program_id String
  status     Status
  Program    Program @relation(fields: [program_id], references: [program_id])
  User       User    @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}

model Alumni {
  user_id          String  @id @unique
  graduation_year  Int
  credentials      String?
  current_position String?
  company          String?
  User             User    @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}

model Program {
  program_id    String     @id
  name          String
  department_id String
  Department    Department @relation(fields: [department_id], references: [department_id])
  Students      Student[]
}

model Department {
  department_id String    @id
  name          String
  contact_email String
  contact_phone String
  Programs      Program[]
}

enum Role {
  Admin
  Student
  Alumni
}

enum Status {
  Active
  Inactive
  Preapproved
}